# ivasms Telegram Bot Configuration
# Copy this file to .env and fill in your actual values

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ADMIN_CHAT_IDS=123456789,987654321

# ivasms.com Credentials
IVASMS_EMAIL=your_email@example.com
IVASMS_PASSWORD=your_password_here

# Bot Behavior Settings
POLL_INTERVAL_SECONDS=15
HEADLESS=true

# Storage Configuration
DB_PATH=./data/state.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./data/bot.log

# Browser Configuration
BROWSER_TIMEOUT=30000
LOGIN_RETRY_ATTEMPTS=3
LOGIN_RETRY_DELAY=5

# Health Check Configuration
HEARTBEAT_INTERVAL_HOURS=24

# Permission Acknowledgment (REQUIRED)
OWNER_PERMISSION_ACKNOWLEDGED=true
PERMISSION_REFERENCE=Website owner permission granted for OTP scraping - Reference: [Your reference here]

# Optional: Advanced Settings
# LOGIN_RETRY_ATTEMPTS=3
# LOGIN_RETRY_DELAY=5
# BROWSER_TIMEOUT=30000
